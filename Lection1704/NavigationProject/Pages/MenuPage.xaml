<Page x:Class="NavigationProject.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NavigationProject.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MenuPage">

    <Viewbox>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                     <Setter Property="FontSize" Value="20"/>
                    <Setter Property="Background" Value="Red"/>
                </Style>
            </StackPanel.Resources>
            <Button Content="About 12345" Click="Button_Click" FontFamily="Comic Sans MS"/>
            <Button Content="News 12345" Click="Button_Click" Style="{StaticResource LimeButton}"/>
        </StackPanel>
    </Viewbox>

</Page>
